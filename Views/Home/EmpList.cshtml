@model IEnumerable<IdentityApplication.Models.Employee>

@{
    ViewData["Title"] = "EmpList";
}

<h1>EmpList</h1>

<p>
    <a asp-action="Create" asp-controller="Verify">Create New</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="EditProfile" asp-controller="Verify" asp-route-email="@item.Email">Edit</a> |
                    <a asp-action="DeleteAccount" asp-controller="Verify" asp-route-email="@item.Email">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
